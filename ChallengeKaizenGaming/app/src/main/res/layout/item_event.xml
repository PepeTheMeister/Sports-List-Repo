<LinearLayout
    android:id="@+id/event_item"
    android:layout_marginStart="1dp"
    android:layout_marginEnd="1dp"
    android:layout_weight="1"
    android:gravity="center"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="120dp"
    android:layout_height="100dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:background="@color/background_screen"
    >

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:gravity="center"
            android:background="@drawable/time_coundown_border"
            android:textColor="@color/white"
            android:id="@+id/countdown_timer"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="HH:MM:SS"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/star_favourite"
            android:layout_width="18dp"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_star_outline_24"

            />

        <TextView
            android:gravity="center"
            android:textColor="@color/white"
            android:id="@+id/competitor1"
            android:layout_width="90dp"
            android:layout_height="20dp"
            android:text="Competitor 1"
            android:textSize="12sp" />

        <TextView
            android:textColor="@color/red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="vs"
            android:textSize="12sp" />

        <TextView
            android:gravity="center"
            android:textColor="@color/white"
            android:id="@+id/competitor2"
            android:layout_width="90dp"
            android:layout_height="20dp"
            android:text="Competitor 2"
            android:textSize="12sp" />

    </LinearLayout>
</LinearLayout>
